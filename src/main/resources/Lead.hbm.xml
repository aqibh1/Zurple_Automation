<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="resources.orm.Lead" table="leads" catalog="zurple_platform">
    <id name="leadId" type="java.lang.Long">
      <column name="lead_id" />
      <generator class="identity" />
    </id>
    <property name="leadName" type="string">
      <column name="first_name" length="20" not-null="true" unique="true" />
    </property>
  </class>
</hibernate-mapping>
