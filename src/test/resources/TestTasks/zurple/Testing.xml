<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Zurple Pre and Post Release Somke Tests" preserve-order="true" verbose="2" parallel="tests" thread-count="1">
	<listeners>		
		<listener class-name="resources.ThreadCountChanger"/>
        <listener class-name="resources.ExtentReporterListener"/>
        <listener class-name="resources.ZurpleReporter.ScreenshotTaker"/>
        <listener class-name="resources.CustomTestNGReporter"/>
	</listeners>
	
	<test name="Verify Social Text Post">
		<parameter name="FBDataFile" value="/resources/data/zurple/backoffice/social/z-social-fb-posts-data.json">
		<classes>
			<class name="com.zurple.backoffice.ZBOCreatePostPageTestNew">
				<methods>
	  				<include name="testVerifyTextPostFB" />
				</methods>
			</class>
		</classes>
		</parameter>
	</test>
	<test name="Verify Social Text Post S">
		<parameter name="FBDataFile" value="/resources/data/zurple/backoffice/social/z-social-fb-posts-data.json">
		<classes>
			<class name="com.zurple.backoffice.ZBOCreatePostPageTestNew">
				<methods>
	  				<include name="testVerifyTextPostFB" />
				</methods>
			</class>
		</classes>
		</parameter>
	</test>
	<test name="Verify Social Text Post">
		<parameter name="FBDataFile" value="/resources/data/zurple/backoffice/social/z-social-fb-posts-data.json">
		<classes>
			<class name="com.zurple.backoffice.ZBOCreatePostPageTestNew">
				<methods>
	  				<include name="testVerifyTextPostFB" />
				</methods>
			</class>
		</classes>
		</parameter>
	</test>
</suite>