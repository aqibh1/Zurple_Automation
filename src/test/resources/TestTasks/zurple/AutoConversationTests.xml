<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Autoconversations Pre and Post Tests" preserve-order="true" verbose="2" parallel="tests" thread-count="1">
	<listeners>		
		<listener class-name="resources.ThreadCountChanger"/>
        <listener class-name="resources.ExtentReporterListener"/>
        <listener class-name="resources.ZurpleReporter.ScreenshotTaker"/>
        <listener class-name="resources.CustomTestNGReporter"/>
	</listeners>
	
	<test name="Create and Verify High Activity Alert">
	<parameter name="registerUserDataFile" value="/resources/data/zurple/auto_conversations/high_activity_alert_data.json">
	<parameter name="dataFile" value="/resources/data/zurple/auto_conversations/high_activity_alert_data.json">
		<classes>
			<class name="com.zurple.website.ZWRegisterUserPageTest">
				<methods>
					<include name="testRegisterUser" />
				</methods>
			</class>
			<class name="com.zurple.backoffice.ZBOLoginPageTest">
				<methods>
					<include name="testBackOfficeLogin" />
				</methods>
			</class>
			<class name="com.zurple.backoffice.ZACreateActivityAlert">
				<methods>
					<include name="testCreateAlert" />
				</methods>
			</class>
			<class name="com.zurple.backoffice.ZBOLeadDetailPageTest">
				<methods>
					<include name="testVerifyActivityAlerts" />
				</methods>
			</class>
			<class name="resources.CurrentPageTest">
				<methods>
					<include name="closeBrowser" />
				</methods>
			</class>
		</classes>
		</parameter>
		</parameter>
	</test>
	
