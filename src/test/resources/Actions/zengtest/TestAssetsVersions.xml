<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Zengtest1 - Test assets have version in URL">

  <test name="Register">
    <groups>
      <run>
        <include name="register"/>
        <include name="asset"/>
      </run>
    </groups>
    <classes>
      <class name="us.zengtest1.RegisterPageTest" />
    </classes>
  </test>

  <test name="Check Assets versions">
    <groups>
      <run>
        <include name="asset"/>
      </run>
    </groups>
    <packages> <package name="us.zengtest1" /> </packages>

  </test>

  <test name="Close browser">
    <classes>
      <class name="resources.CurrentPageTest">
        <methods>
          <include name="closeBrowser" />
        </methods>
      </class>
    </classes>
  </test>

</suite>
