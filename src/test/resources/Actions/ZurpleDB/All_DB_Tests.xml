<suite name="Verify All emails from DB" preserve-order="true"
	verbose="1" parallel="tests" thread-count="1">
	<listeners>
		<listener class-name="resources.ThreadCountChanger" />
		<listener class-name="resources.ExtentReporterListener" />
		<listener
			class-name="resources.ZurpleReporter.ScreenshotTaker" />
		<listener class-name="resources.CustomTestNGReporter" />
	</listeners>

	<test name="Verify Alert Summary emails from DB">
			<classes>
				<class name="com.zurple.backoffice.ZBOMarketingEmailPageDBTest">
					<methods>
						<include name="testAlertSummaryEmailFromDB" />
					</methods>
				</class>
			</classes>
	</test>
	<test name="Verify AutoResponder emails from DB">
			<classes>
				<class name="com.zurple.backoffice.ZBOMarketingEmailPageDBTest">
					<methods>
						<include name="testAutoResponderEmailFromDB" />
					</methods>
				</class>
			</classes>
	</test>
	<test name="Verify Campaign emails from DB">
			<classes>
				<class name="com.zurple.backoffice.ZBOMarketingEmailPageDBTest">
					<methods>
						<include name="testCampaignEmailFromDB" />
					</methods>
				</class>
			</classes>
	</test>
	<test name="Verify CMA emails from DB">
			<classes>
				<class name="com.zurple.backoffice.ZBOMarketingEmailPageDBTest">
					<methods>
						<include name="testCMAEmailFromDB" />
					</methods>
				</class>
			</classes>
	</test>
	<test name="Verify Mass emails from DB">
			<classes>
				<class name="com.zurple.backoffice.ZBOMarketingEmailPageDBTest">
					<methods>
						<include name="testMassEmailFromDB" />
					</methods>
				</class>
			</classes>
	</test>
	<test name="Verify PUNs emails from DB">
			<classes>
				<class name="com.zurple.backoffice.ZBOMarketingEmailPageDBTest">
					<methods>
						<include name="testPUNSFromDB" />
					</methods>
				</class>
			</classes>
	</test>
</suite>