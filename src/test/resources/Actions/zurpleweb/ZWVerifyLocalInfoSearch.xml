<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Zurple Website Pre Release Somke Tests"
	preserve-order="true" verbose="2" parallel="tests" thread-count="1">
	<listeners>
		<listener class-name="resources.ThreadCountChanger" />
		<listener class-name="resources.ExtentReporterListener" />
		<listener
			class-name="resources.ZurpleReporter.ScreenshotTaker" />
		<listener class-name="resources.CustomTestNGReporter" />
	</listeners>

	<test name="Verify local info search shows in lead details page">
	<parameter name="registerUserDataFile" value="/resources/data/zurple/register_user/register-user-localinfo-search.json">
		<classes>
			<class name="com.zurple.website.ZWRegisterUserPageTest">
				<methods>
					<include name="testRegisterUser" />
				</methods>
			</class>
			<class name="com.zurple.backoffice.ZBOLoginPageTest">
					<methods>
						<include name="testBackOfficeLogin" />
					</methods>
			</class>
			<class name="com.zurple.backoffice.ZBOLeadDetailPageTest">
					<methods>
						<include name="testVerifyCommunityReportsSearchIsDisplayed" />
						<include name="testVerifySchoolReportsSearchIsDisplayed" />
						<include name="testVerifyPOIReportsSearchIsDisplayed" />
						<include name="testVerifyCorrectZipIsDisplayedFroCommunityReports" />
						<include name="testVerifyCorrectZipIsDisplayedForSchoolReports" />
						<include name="testVerifyCorrectZipIsDisplayedForPOIReports" />
					</methods>
				</class>
			<class name="resources.CurrentPageTest">
				<methods>
					<include name="closeBrowser" />
				</methods>
			</class>
		</classes>
		</parameter>
	</test>
</suite>