<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Zapier lead import from Google Sheets" preserve-order="true" verbose="2" parallel="tests" thread-count="1">
	<listeners>		
		<listener class-name="resources.ThreadCountChanger"/>
        <listener class-name="resources.ExtentReporterListener"/>
        <listener class-name="resources.ZurpleReporter.ScreenshotTaker"/>
        <listener class-name="resources.CustomTestNGReporter"/>
	</listeners>	
	
	<test name="Verify Zapier lead import from Google Sheets">
		<parameter name="datafile" value="/resources/data/zurple/backoffice/zapier-data-file.json">
		<classes>
		  <class name="com.zurple.backoffice.ZBOVerifyZapierLeadImportPageTest">
				<methods>
	 	   			<include name="testVerifyZapierImportedLeads"/>
	 	   			<include name="testVerifyZapierLeadName"/>
	 	   			<include name="testVerifyZapierLeadPhone"/>
	 	   			<include name="testVerifyZapierLeadAddress"/>
	 	   			<include name="testVerifyZapierLeadEmail"/>
	 	   			<include name="testVerifyZapierLeadSource"/>
	 	   			<include name="testVerifyZapierLeadNotes"/>
				</methods>
			</class>
		</classes>
	</parameter>
	</test>
	</suite>