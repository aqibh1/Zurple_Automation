<suite name="Create Ads Suite"
	preserve-order="true" verbose="2" parallel="tests" thread-count="1">
	<listeners>
		<listener class-name="resources.ThreadCountChanger" />
		<listener class-name="resources.ExtentReporterListener" />
		<listener
			class-name="resources.ZurpleReporter.ScreenshotTaker" />
		<listener class-name="resources.CustomTestNGReporter" />
	</listeners>

	<test name="Verifications on Create Seller lead ad page">
	<parameter name="dataFile" value="/resources/data/zurple/ads/seller_lead/seller-conversion-lead-form-ad.json">
		<classes>
			<class name="com.zurple.backoffice.admin.ZACreateSellerLeadsAdPageTest">
				<methods>
					 <include name="testVerifyPackageAlertIsTriggered" />
					 <include name="testVerifyAdminAlertIsTriggered" />
					 <include name="testVerifyBudgetAlertIsTriggered" />
					 <include name="testVerifyBudgetLessThanHundredAlertIsTriggered" />
					 <include name="testVerifyZipCodeAlertIsTriggered" />
					 <include name="testVerifyCityAlertIsTriggered" />
					 <include name="testVerifyAdTypeAlertIsTriggered" />
					 <include name="testVerifyCMACarouselAlertIsTriggered" />
					 <include name="testVerifyCMAVideoAlertIsTriggered" />
					 <include name="testVerifyCarouselDownloadAlertIsTriggered" />
				</methods>
			</class>
			
		</classes>
		</parameter>
	</test>
</suite>