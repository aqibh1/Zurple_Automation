<suite name="Create Ads Suite"
	preserve-order="true" verbose="2" parallel="tests" thread-count="1">
	<listeners>
		<listener class-name="resources.ThreadCountChanger" />
		<listener class-name="resources.ExtentReporterListener" />
		<listener
			class-name="resources.ZurpleReporter.ScreenshotTaker" />
		<listener class-name="resources.CustomTestNGReporter" />
	</listeners>


	<test name="Verify Custom ads on step 2 section 1">
		<classes>
			<class name="com.zurple.backoffice.ZBOCreateAdPageTest">
				<methods>
					<include name="testVerifyUserLandsToStep2AfterClickingOk"/>
					<include name="testVerifyListingAddressIsSameOnStep1AndStep2"/>
					<include name="testVerifyEditButtonRedirectsUserOnStep1"/>
					<include name="testSection1IsCheckedOnStep2"/>
					<include name="testSection1AdHeadingIsVisible"/>
				</methods>
			</class>
		</classes>
	</test>
</suite>