<suite name="Capture Lead From About Me Page"
	preserve-order="true" verbose="2" parallel="tests" thread-count="1">
	<listeners>
		<listener class-name="resources.ThreadCountChanger" />
		<listener class-name="resources.ExtentReporterListener" />
		<listener
			class-name="resources.ZurpleReporter.ScreenshotTaker" />
		<listener class-name="resources.CustomTestNGReporter" />
	</listeners>

	<test name="Verify Phone Icon Is Disabled if phone number is not provided">
	<parameter name="dataFile" value="/resources/data/zurple/backoffice/zurple-add-lead-phone-disabled-data.json">
		<classes>
			<class name="com.zurple.backoffice.ZBOLeadCRMPageTest">
				<methods>
					<include name="testPhoneIconIsDisabledIfPhoneNumberIsNotProvided" />
				</methods>
			</class>
		</classes>
		</parameter>
	</test>
	
	<test name="Verify Phone Icon Is Visible for leads on CRM page">
		<classes>
			<class name="com.zurple.backoffice.ZBOLeadCRMPageTest">
				<methods>
					<include name="testPhoneIconIsVisibleForLeads" />
				</methods>
			</class>
		</classes>
	</test>

</suite>