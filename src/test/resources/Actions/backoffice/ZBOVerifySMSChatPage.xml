<suite name="Verify SMS chat page" preserve-order="true" verbose="2" parallel="tests" thread-count="1">
	<listeners>		
		<listener class-name="resources.ThreadCountChanger"/>
        <listener class-name="resources.ExtentReporterListener"/>
        <listener class-name="resources.ZurpleReporter.ScreenshotTaker"/>
        <listener class-name="resources.CustomTestNGReporter"/>
	</listeners>
	
	<test name="Verify SMS chat page">	
	<parameter name="dataFile" value="/resources/data/zurple/backoffice/sms-chat-page-data.json"> 
			<classes>
				<class name="com.zurple.backoffice.ZBOSMSChatPageTest">
					<methods>
							<include name="testSetup" />
							<include name="testSMSChatPageTitle" />
							<include name="testSMSChatPageLeadName" />
							<include name="testSMSChatPagPhone" />
							<include name="testSMSChatPageHeader" />
							<include name="testSendSMSMessage" />
							<include name="testAdminInitials" />
							<include name="testVerifySentMessage" />
							<include name="testVerifyTimestamp" />
							<include name="testVerifyLeadDetailsButton" />
					</methods>
				</class>
			</classes>
	</parameter>
	</test>	
	
	<test name="Verify SMS chat page Unenroll section">	
	<parameter name="dataFile" value="/resources/data/zurple/backoffice/sms-chat-page-data.json"> 
	<parameter name="registerUserDataFile" value="/resources/data/zurple/register_user/register-user-email-subscription.json"> 
			<classes>
				<class name="com.zurple.backoffice.ZBOSMSChatPageTest">
					<methods>
							<include name="leadRegisterPreCondition" />
							<include name="testUnEnrollLabelIsVisible" />
							<include name="testUnEnrollCampaignNameIsVisible" />
							<include name="testUnEnrollMessageIsVisible" />
							<include name="testUnEnrollButtonText" />
							<include name="testLeadUnEnrollButtonIsWorking" />
							<include name="testLeadIsUnEnrolledFromCampaign" />
					</methods>
				</class>
			</classes>
	</parameter>
	</parameter>
	</test>	
	
	<test name="Verify SMS message from chat page via API call">	
	<parameter name="dataFile" value="/resources/data/zurple/backoffice/sms-chat-page-data.json"> 
			<classes>
				<class name="com.zurple.backoffice.ZBOLoginPageTest">
					<methods>
						<include name="testBackOfficeAPILogin" />
					</methods>
				</class>
				<class name="com.zurple.rest.ZBORestPostSMSMessageTest">
					<methods>
							<include name="testPostMessage" />
					</methods>
				</class>
			</classes>
	</parameter>
	</test>	
</suite>