<suite name="Verify SMS chat page" preserve-order="true" verbose="2" parallel="tests" thread-count="1">
	<listeners>		
		<listener class-name="resources.ThreadCountChanger"/>
        <listener class-name="resources.ExtentReporterListener"/>
        <listener class-name="resources.ZurpleReporter.ScreenshotTaker"/>
        <listener class-name="resources.CustomTestNGReporter"/>
	</listeners>
	
	<test name="Verify SMS chat page">	
	<parameter name="smschatpage" value="/resources/data/zurple/backoffice/sms-chat-page-data.json"> 
			<classes>
				<class name="com.zurple.backoffice.ZBOSMSChatPageTest">
					<methods>
							<include name="testSetup" />
							<include name="testSMSChatPageTitle" />
							<include name="testSMSChatPageLeadName" />
							<include name="testSMSChatPagPhone" />
							<include name="testSMSChatPageHeader" />
							<include name="testSendSMSMessage" />
							<include name="testAdminInitials" />
							<include name="testVerifySentMessage" />
							<include name="testVerifyTimestamp" />
							<include name="testVerifyLeadDetailsButton" />
					</methods>
				</class>
			</classes>
	</parameter>
	</test>	
</suite>