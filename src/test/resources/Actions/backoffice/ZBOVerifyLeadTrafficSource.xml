<suite name="Capture Lead From About Me Page"
	preserve-order="true" verbose="2" parallel="tests" thread-count="1">
	<listeners>
		<listener class-name="resources.ThreadCountChanger" />
		<listener class-name="resources.ExtentReporterListener" />
		<listener class-name="resources.ZurpleReporter.ScreenshotTaker" />
		<listener class-name="resources.CustomTestNGReporter" />
	</listeners>


	<test name="Verify Traffic source from lead crm and lead details page">	
	<parameter name="dataFile" value="/resources/data/zurple/register_user/register-user-traffic-source-data.json"> 
			<classes>
				<class name="com.zurple.backoffice.ZBOLoginPageTest">
					<methods>
						<include name="testBackOfficeLogin" />
					</methods>
				</class>
				<class name="com.zurple.backoffice.ZBOLeadDetailPageTest">
					<methods>
							<include name="testVerifyLeadSourceCapturedFromWebsite" />
					</methods>
				</class>
					<class name="com.zurple.backoffice.ZBOLeadCRMPageTest">
					<methods>
							<include name="testApplyZurpleTrafficFilter" />
							<include name="testVerifyLeadSourceFromCRMPage" />
					</methods>
				</class>
					<class name="com.zurple.backoffice.ZBOLeadPageTest">
					<methods>
							<include name="testApplyLeadSourceFilter" />
					</methods>
				</class>
				<class name="resources.CurrentPageTest">
					<methods>
						<include name="closeBrowser" />
					</methods>
				</class>
			</classes>
	</parameter>
	</test>	
</suite>