<suite name="Update and Verify User Settings suite"
	preserve-order="true" verbose="1" parallel="tests" thread-count="1">
	<listeners>
		<listener class-name="resources.ThreadCountChanger" />
		<listener class-name="resources.ExtentReporterListener" />
		<listener
			class-name="resources.ZurpleReporter.ScreenshotTaker" />
		<listener class-name="resources.CustomTestNGReporter" />
	</listeners>

	<test name="Update Lead in Back office and verify on Web">
		<parameter name="registerUserDataFile"
			value="/resources/data/zurple/register_user/register-user-update-lead-info.json">
			<parameter name="searchPropertyDataFile"
				value="/resources/data/zurple/property_search/zurple-property-capture-lead-search-city.json">
				<parameter name="userSettings"
					value="/resources/data/zurple/zurple-user-settings-bo.json">

					<classes>
						<class name="com.zurple.website.ZWHomeSearchPageTest">
							<methods>
								<include name="testSearchPropoerty" />
							</methods>
						</class>
						<class name="com.zurple.website.ZWHomesForSalePageTest">
							<methods>
								<include name="testHomesForSale" />
							</methods>
						</class>
						<class name="com.zurple.website.ZWRegisterUserPageTest">
							<methods>
								<include name="testRegisterUserFromLoginPage" />
							</methods>
						</class>
						<class name="com.zurple.backoffice.ZBOLoginPageTest">
							<methods>
								<include name="testBackOfficeLogin" />
							</methods>
						</class>
						<class name="com.zurple.backoffice.ZBOLeadPageTest">
							<methods>
								<include name="testSearchAndVerifyLead" />
							</methods>
						</class>
						<class name="com.zurple.backoffice.ZBOLeadDetailPageTest">
							<methods>
								<include name="testVerifyLeadIsAddedInBackOffice" />
							</methods>
						</class>
						<class
							name="com.zurple.backoffice.ZBOLeadEmailPreferencesPageTest">
							<methods>
								<include name="testUpdateLeadInfo" />
							</methods>
						</class>
						<class name="com.zurple.website.ZWAccountSettingsPageTest">
							<methods>
								<include name="testVerifyAccountSettings" />
							</methods>
						</class>
						<class name="resources.CurrentPageTest">
							<methods>
								<include name="closeBrowser" />
							</methods>
						</class>
					</classes>
				</parameter>
			</parameter>
		</parameter>
	</test>
</suite>