<suite name="Update and Verify User Settings suite"
	preserve-order="true" verbose="1" parallel="tests" thread-count="1">
	<listeners>
		<listener class-name="resources.ThreadCountChanger" />
		<listener class-name="resources.ZurpleReporter.ScreenshotTaker" />
		<listener class-name="resources.CustomTestNGReporter" />
		<listener class-name="resources.TestRailResultsListener" />
	</listeners>
 
	<test name="Add Campaign from Lead Details">
	<parameter name="dataFile" value="/resources/data/zurple/backoffice/marketing/campaign-data.json">
			<classes>
				<class name="com.zurple.backoffice.ZBOLoginPageTest">
				<methods>
					<include name="testBackOfficeLogin" />
				</methods>
			</class>
				<class name="com.zurple.backoffice.ZBOCreateCampaignPageTest">
					<methods>
						<include name="testVerifyEnrollmentInCampaignButtonIsVisibleInLeadDetailsPage" />
						<include name="testVerifyCampaignsAreShownToUserInLeadDetails" />
						<include name="testVerifySuccessMessageAppearsOnSuccessfullEnrollment" />
						<include name="testVerifyCampaignTitleIsValidLink" />
						<include name="testVerifyUserCanUnenrollFromCampaignFromLeadDetails" />
					</methods>
				</class>
				<class name="resources.CurrentPageTest">
				<methods>
					<include name="closeBrowser" />
				</methods>
			</class>
			</classes>
			</parameter>
	</test>

