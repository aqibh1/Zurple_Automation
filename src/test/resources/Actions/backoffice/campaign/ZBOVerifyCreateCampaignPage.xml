<suite name="Update and Verify User Settings suite"
	preserve-order="true" verbose="1" parallel="tests" thread-count="1">
	<listeners>
		<listener class-name="resources.ThreadCountChanger" />
		<listener class-name="resources.ExtentReporterListener" />
		<listener
			class-name="resources.ZurpleReporter.ScreenshotTaker" />
		<listener class-name="resources.CustomTestNGReporter" />
	</listeners>

	<test name="Verifications on Create campaign page">
	<parameter name="dataFile" value="/resources/data/zurple/backoffice/marketing/campaign-data.json">
			<classes>
				<class name="com.zurple.backoffice.ZBOLoginPageTest">
				<methods>
					<include name="testBackOfficeLogin" />
				</methods>
			</class>
				<class name="com.zurple.backoffice.ZBOCreateCampaignPageTest">
					<methods>
						<include name="testVerifyCorrectTemplatePreviewIsShownBeforeSavingCampaign" />
						<include name="testVerifyValidationIsTriggeredForEmptyCampaignName" />
						<include name="testVerifyCorrectTemplatePreviewIsShownAfterSavingCampaign" />
						<include name="testVerifyLimitedRecipientsOptionsAreVisible" />
						<include name="testVerifyMatchingLeadsAreShown" />
						<include name="testVerifySuccessMessageIsDisplayedWehnEnrolledIsClicked" />
					</methods>
				</class>
			</classes>
			</parameter>
	</test>
	
</suite>

