<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Verify Email Search Results">
<listeners>
        <listener class-name="resources.ThreadCountChanger"/>
        <listener class-name="resources.TestListener"/>
        <listener class-name="resources.ZurpleReporter.ScreenshotTaker"/>
    </listeners>
  
  <test name="Recent Home Sales page Email Search">

   <parameter name="dataFile" value="/resources/data/email-listing-data.json">

    <classes>
      <class name="com.z57.site.v2.RecentHomeSalesPageTest" >
        <methods>
          <include name="testRecentHomeSalesEmailSearch" />
        </methods>
      </class>
       <class name="resources.CurrentPageTest">
        <methods>
          <include name="closeBrowser" />
        </methods>
      </class>
    </classes>
    </parameter>
  </test>
  
  <test name="Recent Home Sales page Email Listing with User logged in">
    <parameter name="dataFile" value="/resources/data/email-listing-data.json"> 
    <classes>
      <class name="com.z57.site.v2.HomePageTest" >
        <methods>
          <include name="testSignInWithValidEmail" />
        </methods>
      </class>
       <class name="com.z57.site.v2.RecentHomeSalesPageTest" >
        <methods>
          <include name="testRecentHomeSalesEmailSearch" />
        </methods>
      </class>
       <class name="resources.CurrentPageTest">
        <methods>
          <include name="closeBrowser" />
        </methods>
      </class>
    </classes>
    </parameter>    
  </test>


  
</suite>