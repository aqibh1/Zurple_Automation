<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Searchlistings" preserve-order="true" verbose="2" parallel="tests" thread-count="1">
<listeners>
        <listener class-name="resources.ThreadCountChanger"/>
</listeners>
  <test name="Home Search Signin">
    <classes>
      <class name="com.z57.site.v2.HomePageTest" >
        <methods>
          <include name="testSignInWithValidEmail" />
        </methods>
      </class>
    </classes>
  </test>
  
  <test name="Search homes by city">
  <parameter name="dataFile" value="/resources/data/home-search-data-1.json" />
    <classes>
      <class name="com.z57.site.v2.HomeSearchPageTest" >
        <methods>
          <include name="testSearchByDifferentDataSet" />
        </methods>
      </class>
    </classes>
  </test>
  
  <test name="Verify Property Listing">
  <parameter name="dataFile" value="/resources/data/home-search-data-1.json" />
    <classes>
      <class name="com.z57.site.v2.PropertyListingPageTest" >
        <methods>
          <include name="testVerificationOfPropertyListing" />
        </methods>
      </class>
    </classes>
  </test>
  
  <test name="Close browser">
    <classes>
      <class name="resources.CurrentPageTest">
        <methods>
          <include name="closeBrowser" />
        </methods>
      </class>
    </classes>
  </test>

</suite>