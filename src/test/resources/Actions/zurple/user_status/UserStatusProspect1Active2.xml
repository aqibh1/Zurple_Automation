<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="User Change Status From Prospect1 to Active2">

  <test name="Preparing user status change prospect1->active2">
    <parameter name="status_initial" value="prospect1"/>
    <classes>
      <class name="resources.models.UserTest">
        <methods>
          <include name="testPrepareUserBecomesActive2" />
        </methods>
      </class>
    </classes>
  </test>
  
  <test name="Processing leads status automation">
    <classes>
      <class name="com.zurple.my.admin.ProcessEmailQueuePageTest" >
        <methods>
          <include name="testLeadAlertsQueueProcessing" />
        </methods>
      </class>
      <class name="com.zurple.my.admin.LeadStatusAutomationPageTest" >
        <methods>
          <include name="testLeadStatusAutomationProcessing" />
        </methods>
      </class>
    </classes>
  </test>

  <test name="Check user status is ACTIVE2">
    <parameter name="status_expected" value="active2"/>
    <classes>
      <class name="resources.models.UserTest">
        <methods>
          <include name="testLastUserStatus" />
        </methods>
      </class>
    </classes>
  </test>

</suite>
