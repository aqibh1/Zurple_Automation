<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="User Change Status From New to Active1">


  <test name="Preparing user status change new->active1">
    <parameter name="status_initial" value="new"/>
    <classes>
      <class name="resources.models.UserTest">
        <methods>
          <include name="testPrepareUserBecomesActive1" />
        </methods>
      </class>
    </classes>
  </test>
  
  <test name="Processing leads status automation">
    <classes>
      <class name="com.zurple.my.admin.LeadStatusAutomationPageTest" >
        <methods>
          <include name="testLeadStatusAutomationProcessing" />
        </methods>
      </class>
    </classes>
  </test>

  <test name="Check user status is ACTIVE1">
    <parameter name="status_expected" value="active1"/>
    <classes>
      <class name="resources.models.UserTest">
        <methods>
          <include name="testLastUserStatus" />
        </methods>
      </class>
    </classes>
  </test>

</suite>
