<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Lead status automation paused icon is show in lead details page">

  <test name="Register new user">
    <classes>
      <class name="us.zengtest1.HomePageTest" />
      <class name="us.zengtest1.RegisterPageTest" >
        <methods>
          <include name="testRegisterNewRegularLead" />
        </methods>
      </class>
    </classes>
  </test>

  <test name="Check user status is NEW and ignore automation flag is set to 0 after registration">
    <parameter name="status_expected" value="new"/>
    <parameter name="ignore_automation" value="0"/>
    <classes>
      <class name="com.zurple.my.LoginPageTest" >
        <methods>
          <include name="testSubmittingValidLoginForm" />
        </methods>
      </class>
      <class name="resources.models.UserTest">
        <methods>
          <include name="testLastUserStatus" />
        </methods>
      </class>
    </classes>
  </test>

  <test name="Change status manually temporarily to active1">
    <parameter name="status" value="active1"/>
    <parameter name="temporary_status_change" value="true"/>
    <classes>
      <class name="com.zurple.my.LeadDetailPageTest">
        <methods>
          <include name="testLeadStatusUpdate" />
        </methods>
      </class>
      <class name="resources.CurrentPageTest">
        <methods>
          <include name="refreshPage" />
        </methods>
      </class>
    </classes>
  </test>

  <test name="Check status is active1 and paused">
    <parameter name="status" value="active1"/>
    <parameter name="ignore_automation" value="1"/>
    <classes>
      <class name="com.zurple.my.LeadDetailPageTest">
        <methods>
          <include name="testLeadStatusBlock" />
        </methods>
      </class>
    </classes>
  </test>

  <test name="Change status manually permanently to prospect1">
    <parameter name="status" value="prospect1"/>
    <parameter name="temporary_status_change" value="false"/>
    <classes>
      <class name="com.zurple.my.LeadDetailPageTest">
        <methods>
          <include name="testLeadStatusUpdate" />
        </methods>
      </class>
      <class name="resources.CurrentPageTest">
        <methods>
          <include name="refreshPage" />
        </methods>
      </class>
    </classes>
  </test>

  <test name="Check status is prospect1 and disabled">
    <parameter name="status" value="prospect1"/>
    <parameter name="ignore_automation" value="2"/>
    <classes>
      <class name="com.zurple.my.LeadDetailPageTest">
        <methods>
          <include name="testLeadStatusBlock" />
        </methods>
      </class>
      <class name="resources.CurrentPageTest">
        <methods>
          <include name="closeBrowser" />
        </methods>
      </class>
    </classes>
  </test>

</suite>
