<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Lead status automation icon is show correctly in lead details page">

  <test name="Register new user">
    <classes>
      <class name="us.zengtest1.HomePageTest" />
      <class name="us.zengtest1.RegisterPageTest" >
        <methods>
          <include name="testRegisterNewRegularLead" />
        </methods>
      </class>
    </classes>
  </test>

  <test name="Change status manually temporarily to active1">
    <parameter name="url" value="/leads/index/ext/lead-client"/>
    <parameter name="status" value="new"/>
    <parameter name="ignore_automation" value="0"/>
    <classes>
      <class name="resources.models.UserTest">
        <methods>
          <include name="testChangeUserStatus" />
        </methods>
      </class>
      <class name="com.zurple.my.LoginPageTest" >
        <methods>
          <include name="testSubmittingValidLoginForm" />
        </methods>
      </class>
      <class name="com.zurple.my.LeadListPageTest">
        <methods>
          <include name="testLeadList" />
          <include name="testLeadStatusAutomationIcon" />
        </methods>
      </class>
    </classes>
  </test>

</suite>
