<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Lead status automation icon is not shown for new leads in client2 leads list page">

    <test name="Using user for testing">
        <parameter name="url" value="/leads/index/ext/client2"/>
        <parameter name="status" value="client2"/>
        <parameter name="ignore_automation" value="0"/>
        <classes>
          <class name="resources.models.UserTest">
            <methods>
                <include name="testChangeUserStatus" />
            </methods>
          </class>
          <class name="com.zurple.my.LeadListPageTest">
            <methods>
              <include name="testLeadList" />
              <include name="testLeadStatusAutomationIcon" />
            </methods>
          </class>
        </classes>
    </test>

</suite>
