<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Lead status disabled automation icon is show correctly in leads priority list page">

    <test name="Change status manually temporarily to active1">
        <parameter name="status" value="active1"/>
        <parameter name="temporary_status_change" value="false"/>
        <parameter name="score" value="90"/>
        <classes>
            <class name="resources.models.UserTest">
                <methods>
                    <include name="testChangeUserLeadScore" />
                </methods>
            </class>
            <class name="com.zurple.my.LeadDetailPageTest">
                <methods>
                    <include name="testLeadStatusUpdate" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="Using ACTIVE1 user for testing">
        <parameter name="url" value="/leads/index/ext/priority"/>
        <parameter name="status" value="active1"/>
        <parameter name="ignore_automation" value="2"/>
        <classes>
          <class name="com.zurple.my.LeadListPageTest">
            <methods>
              <include name="testLeadList" />
              <include name="testLeadStatusAutomationIcon" />
            </methods>
          </class>
        </classes>
    </test>

</suite>
