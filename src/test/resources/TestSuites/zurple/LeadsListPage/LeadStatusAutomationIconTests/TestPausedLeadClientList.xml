<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Lead status paused automation icon is show correctly in client leads list page">

    <test name="Change status manually temporarily to client">
        <parameter name="status" value="client"/>
        <parameter name="temporary_status_change" value="true"/>
        <classes>
            <class name="com.zurple.my.LeadDetailPageTest">
                <methods>
                    <include name="testLeadStatusUpdate" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="Using prospect1 user for testing">
        <parameter name="url" value="/leads/index/ext/client"/>
        <parameter name="status" value="client"/>
        <parameter name="ignore_automation" value="1"/>
        <classes>
          <class name="com.zurple.my.LeadListPageTest">
            <methods>
              <include name="testLeadList" />
              <include name="testLeadStatusAutomationIcon" />
            </methods>
          </class>
        </classes>
    </test>

</suite>
