<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Lead status disabled automation icon is show correctly in inactive leads list page">

    <test name="Change status manually permanent to inactive">
        <parameter name="status" value="inactive"/>
        <parameter name="temporary_status_change" value="false"/>
        <classes>
            <class name="com.zurple.my.LeadDetailPageTest">
                <methods>
                    <include name="testLeadStatusUpdate" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="Using user for testing">
        <parameter name="url" value="/leads/index/ext/inactive"/>
        <parameter name="status" value="inactive"/>
        <parameter name="ignore_automation" value="2"/>
        <classes>
          <class name="com.zurple.my.LeadListPageTest">
            <methods>
              <include name="testLeadList" />
              <include name="testLeadStatusAutomationIcon" />
            </methods>
          </class>
        </classes>
    </test>

</suite>
