<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="User Not Change Status From Active2 to Active1">

  <test name="Trigger user status change active2->active1">
    <parameter name="status_initial" value="active2"/>
    <classes>
      <class name="resources.models.UserTest">
        <methods>
          <include name="testPrepareUserBecomesActive1" />
        </methods>
      </class>
      <class name="us.zengtest1.SearchPageTest">
        <methods>
          <include name="testTitle" />
        </methods>
      </class>
    </classes>
  </test>
  
  <test name="Check user status is ACTIVE2">
    <parameter name="status_expected" value="active2"/>
    <classes>
      <class name="resources.models.UserTest">
        <methods>
          <include name="testLastUserStatus" />
        </methods>
      </class>
    </classes>
  </test>

</suite>
