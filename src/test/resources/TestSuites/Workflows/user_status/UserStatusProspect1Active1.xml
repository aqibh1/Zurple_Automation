<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="User Change Status From Prospect1 to Active1">

  <test name="Register new user">
    <classes>
      <class name="us.zengtest1.HomePageTest" />
      <class name="us.zengtest1.RegisterPageTest" >
        <methods>
          <include name="testRegisterNewRegularLead" />
        </methods>
      </class>
    </classes>
  </test>

  <test name="Trigger user status change prospect1->active1">
    <classes>
      <class name="resources.models.UserTest">
        <methods>
          <include name="testProspect1UserBecomesActive1" />
        </methods>
      </class>
      <class name="us.zengtest1.SearchPageTest">
        <methods>
          <include name="testTitle" />
        </methods>
      </class>
      <class name="resources.CurrentPageTest">
        <methods>
          <include name="closeBrowser" />
        </methods>
      </class>
    </classes>
  </test>
  
  <test name="Check user status is ACTIVE1">
    <parameter name="status_expected" value="active1"/>
    <classes>
      <class name="resources.models.UserTest">
        <methods>
          <include name="testLastUserStatus" />
        </methods>
      </class>
    </classes>
  </test>

</suite>
