<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="User Change Status From Prospect1 to Active1">


  <test name="Trigger user status change prospect1->active1">
    <parameter name="status_initial" value="prospect1"/>
    <classes>
      <class name="resources.models.UserTest">
        <methods>
          <include name="testPrepareUserBecomesActive1" />
        </methods>
      </class>
      <class name="us.zengtest1.SearchPageTest">
        <methods>
          <include name="testTitle" />
        </methods>
      </class>
    </classes>
  </test>
  
  <test name="Check user status is ACTIVE1">
    <parameter name="status_expected" value="active1"/>
    <classes>
      <class name="resources.models.UserTest">
        <methods>
          <include name="testLastUserStatus" />
        </methods>
      </class>
    </classes>
  </test>

</suite>
