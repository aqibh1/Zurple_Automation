<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="User Not Change Status From Client to Active1">

  <test name="Register new user">
    <classes>
      <class name="us.zengtest1.HomePageTest" />
      <class name="us.zengtest1.RegisterPageTest" >
        <methods>
          <include name="testRegisterNewRegularLead" />
        </methods>
      </class>
      <class name="resources.CurrentPageTest">
        <methods>
          <include name="closeBrowser" />
        </methods>
      </class>
    </classes>
  </test>

  <test name="Preparing user status change client->active1">
    <parameter name="status_initial" value="client"/>
    <classes>
      <class name="resources.models.UserTest">
        <methods>
          <include name="testPrepareUserBecomesActive1" />
        </methods>
      </class>
    </classes>
  </test>
  
  <test name="Processing leads status automation">
    <classes>
      <class name="com.zurple.my.LoginPageTest" >
        <methods>
          <include name="testSubmittingValidLoginForm" />
        </methods>
      </class>
      <class name="com.zurple.my.admin.LeadStatusAutomationPageTest" >
        <methods>
          <include name="testLeadStatusAutomationProcessing" />
        </methods>
      </class>
      <class name="resources.CurrentPageTest">
        <methods>
          <include name="closeBrowser" />
        </methods>
      </class>
    </classes>
  </test>

  <test name="Check user status is CLIENT">
    <parameter name="status_expected" value="client"/>
    <classes>
      <class name="resources.models.UserTest">
        <methods>
          <include name="testLastUserStatus" />
        </methods>
      </class>
    </classes>
  </test>

</suite>
