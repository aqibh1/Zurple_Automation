<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="User Change Status From New to Active1">

  <test name="user_register">
    <classes>
      <class name="us.zengtest1.HomePageTest" />
      <class name="us.zengtest1.RegisterPageTest" >
        <methods>
          <include name="testRegisterNewRegularLead" />
        </methods>
      </class>
      <class name="resources.CurrentPageTest">
        <methods>
          <include name="closeBrowser" />
        </methods>
      </class>
    </classes>
  </test>

  <test name="user_change_status_new_active1">
    <classes>
      <class name="resources.models.UserTest">
        <methods>
          <include name="testNewUserBecomesActive1" />
        </methods>
      </class>
    </classes>
  </test>
  
  <test name="Processing leads status automation">
    <classes>
      <class name="com.zurple.my.LoginPageTest" >
        <methods>
          <include name="testSubmittingValidLoginForm" />
        </methods>
      </class>
      <class name="com.zurple.my.admin.LeadStatusAutomationPageTest" >
        <methods>
          <include name="testLeadStatusAutomationProcessing" />
        </methods>
      </class>
      <class name="resources.CurrentPageTest">
        <methods>
          <include name="closeBrowser" />
        </methods>
      </class>
    </classes>
  </test>

  <test name="user_status_new">
    <parameter name="status_expected" value="active1"/>
    <classes>
      <class name="resources.models.UserTest">
        <methods>
          <include name="testLastUserStatus" />
        </methods>
      </class>
    </classes>
  </test>

</suite>
